\usepackage{amsthm}
\usepackage{tcolorbox}
\tcbuselibrary{breakable, skins, theorems}

\newtcolorbox{dfn}[2][]{
	enhanced,
	coltitle=black,
	colbacktitle=white!92!black,
	colback=white!92!black,
	colframe=white!92!black,
	title={定義: #2},
	fonttitle=\gtfamily,
	breakable=true,
	top=4mm,
	sharp corners=all,
	oversize,
	after title={\setlength{\parindent}{1\zw}},
	#1
}

\newtcolorbox{thm}[2][]{
	enhanced,
	coltitle=black,
	colbacktitle=white,
	colback=white,
	colframe=black,
	% detach title,
	title={定理: #2},
	attach title to upper,
	fonttitle=\gtfamily,
	breakable=true,
	boxrule=0.2mm,
	oversize,
	before upper={\tcbtitle\quad\setlength{\parindent}{1\zw}},
	#1
}


